<script>
  function etaDelivery() {
    var placedEl = document.querySelector('.v-route-placed');
    var dispatchedEl = document.querySelector('.v-route-dispatches');
    var estimatedEl = document.querySelector('.v-estimated-date');
    var estimatedEl2 = document.querySelector('.v-estimated-date2');

    var today = Date.today();
    
    var fromDate = Date.today().addDays(7);
    var toDate = Date.today().addDays(21);
    var processingFromDate = Date.today().addDays(2);
    var processingToDate = Date.today().addDays(5);

    if (fromDate.is().saturday() || fromDate.is().sunday()) { 
      fromDate = fromDate.next().monday();
    }
    if (toDate.is().saturday() || toDate.is().sunday()) { 
      toDate = toDate.next().monday(); 
    }
    if (processingFromDate.is().saturday() || processingFromDate.is().sunday()) { 
      processingFromDate = processingFromDate.next().monday();
    }
    if (processingToDate.is().saturday() || processingToDate.is().sunday()) { 
      processingToDate = processingToDate.next().monday();
    }
    estimatedEl.innerHTML = fromDate.toString('MMM dS') + " - " + toDate.toString('MMM dS');
    estimatedEl2.innerHTML = fromDate.toString('MMM dS') + " - " + toDate.toString('MMM dS');
    placedEl.innerHTML = today.toString('MMM dS');
    dispatchedEl.innerHTML = processingFromDate.toString('MMM dS') + " - " + processingToDate.toString('MMM dS');
  }

  etaDelivery();
</script>
